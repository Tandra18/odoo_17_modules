<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="event_form" model="ir.ui.view">
            <field name="name">event.form</field>
            <field name="model">event.management</field>
            <field name="arch" type="xml">
                <form string="Event Form">
                    <header>
                        <field name="state" widget="statusbar"/>
                        <!-- Button: Done (Visible only in 'draft' state) -->
                        <button type="object"
                                name="action_done"
                                string="Done"
                                class="oe_highlight"
                                invisible="state != 'draft'"/>
                        <!-- Button: Mark as Draft (Visible in 'done', 'confirm', and 'cancel' states) -->
                        <button type="object"
                                name="action_draft"
                                string="Mark as Draft"
                                invisible="state not in ('done', 'confirm', 'cancel')"/>
                        <!-- Button: Confirm (Visible only in 'done' state) -->
                        <button type="object"
                                name="action_confirm"
                                string="Confirm"
                                class="oe_highlight"
                                invisible="state != 'done'"/>
                        <!-- Button: Cancel (Visible in 'done' and 'confirm' states) -->
                        <button type="object"
                                name="action_cancel"
                                string="Cancel"
                                class="oe_highlight"
                                invisible="state not in ('done', 'confirm')"/>
                    </header>
                    <sheet>
                        <field name="image" widget="image" class="oe_avatar"/>
                            <div class="oe_title">
                                <label for="name" class="oe_edit_only"/>
                                <h1>
                                    <field name="name" placeholder="eg. Development Workshop"/>
                                </h1><br/>
                            </div>
                            <div>
                                <group string="Event Info">
                                    <group>
                                        <field name="event_type"/>
                                        <field name="organizer" placeholder="Host name"/>
                                        <field name="max_person" widget="char"/>
                                    </group>
                                    <group>
                                        <field name="website" placeholder="https://www.xxx.com/"/>
                                        <field name="hotline" placeholder="09-xxx-xxx-xxx" widget="char"/>
                                        <field name="event_description" placeholder="About event!"/>
                                    </group>
                                </group>
                                <group string="Schedule and Place">
                                    <group>
                                        <field name="event_date" widget="date"/>
                                        <field name="start_time" widget="time" placeholder="Example: 1:00 PM"/>
                                    </group>
                                    <group>
                                        <field name="duration" placeholder="Example: 2:30 Hrs"/>
                                        <field name="location" placeholder="Event's location"/>
                                    </group>
                                </group>
                            </div>
                        <group string="Payment Info">
                            <group>
                                <field name="fees" widget="radio"/>
                            </group>
                            <group>
                                <field name="amount"
                                       widget="monetary"
                                       options="{'currency_field': 'currency_id'}"
                                       invisible="fees != 'charged'"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="payment" invisible="fees != 'charged'"/>
                            </group>
                        </group>
                         <notebook>
                             <page string="Participants">
                                 <field name="participant_id">
                                     <tree>
                                         <field name="image" widget="image" options="{'size':[20,20]}" nolabel="0"/>
                                         <field name="name"/>
                                         <field name="gender"/>
                                         <field name="fees"/>
                                         <field name="phone"/>
                                     </tree>
                                 </field>
                             </page>
                             <page string="Sponsors">
                                 <field name="sponsor_id">
                                     <tree>
                                         <field name="image" widget="image" options="{'size':[20,20]}" nolabel="0"/>
                                         <field name="name"/>
                                         <field name="level"/>
                                         <field name="payment_status"/>
                                         <field name="contact_person"/>
                                         <field name="phone"/>
                                     </tree>
                                 </field>
                             </page>
                         </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>