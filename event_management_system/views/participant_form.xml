<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="participant_form" model="ir.ui.view">
            <field name="name">participant.form</field>
            <field name="model">event.participants</field>
            <field name="arch" type="xml">
                <form string="Participant Form">
                    <header>
                        <field name="state" widget="statusbar"/>
                        <!-- Button: Done (Visible only in 'draft' state) -->
                        <button type="object"
                                name="action_done"
                                string="Done"
                                class="oe_highlight"
                                invisible="state != 'draft'"/>
                        <!-- Button: Mark as Draft (Visible in 'done', 'confirm', and 'cancel' states) -->
                        <button type="object"
                                name="action_draft"
                                string="Mark as Draft"
                                invisible="state not in ('done', 'confirm', 'cancel')"/>
                        <!-- Button: Confirm (Visible only in 'done' state) -->
                        <button type="object"
                                name="action_confirm"
                                string="Confirm"
                                class="oe_highlight"
                                invisible="state != 'done'"/>
                        <!-- Button: Cancel (Visible in 'done' and 'confirm' states) -->
                        <button type="object"
                                name="action_cancel"
                                string="Cancel"
                                class="oe_highlight"
                                invisible="state not in ('done', 'confirm')"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button type="action"
                                    name="%(action_participated_line)d"
                                    class="oe_stat_button"
                                    icon="fa-history">
                                Participation History
                            </button>
                        </div>
                        <div class="custom-header">
                            <field name="image" widget="image" class="oe_avatar"/>
                            <div class="oe_title">
                                <label for="name" class="oe_edit_only"/>
                                <h1>
                                    <field name="name" placeholder="eg. Mg Mg"
                                           readonly="state in ['confirm', 'done', 'cancel']"/>
                                </h1><br/>
                            </div>
                        </div>
                        <div class="custom-header">
                            <group string="Personal Info">
                                <group>
                                    <field name="age"
                                           widget="char"
                                           readonly="state in ['confirm', 'cancel']"/>
                                    <field name="gender"
                                           widget="radio"
                                           readonly="state in ['confirm', 'cancel']"/>
                                    <field name="nrc"
                                           placeholder="xx/xxx(N)xxxxxx"
                                           readonly="state in ['confirm', 'cancel']"/>
                                </group>
                                <group>
                                    <field name="address"
                                           readonly="state in ['confirm', 'cancel']"/>
                                    <field name="email"
                                           placeholder="example@gmail.com"
                                           readonly="state in ['confirm', 'cancel']"/>
                                    <field name="phone"
                                           placeholder="09-xxx-xxx-xxx"
                                           widget="char"
                                           readonly="state in ['confirm', 'cancel']"/>
                                    <field name="reg_date"
                                           readonly="state in ['confirm', 'done', 'cancel']"/>
                                </group>
                            </group>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>